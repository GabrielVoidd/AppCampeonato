<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Campeonato_App.Views.Splash">
    <ContentPage.Content>
        <StackLayout
            Spacing="20"
            >
            <Image Source="app_logo.png"
                   WidthRequest="300"
                   Margin="20,80,20,20"/>

            <Label
                Text="Campeonato Mundial FIFA "
                FontSize="25"
                HorizontalOptions="CenterAndExpand"
                />
            <StackLayout
                Orientation="Horizontal"
                VerticalOptions="EndAndExpand"
                >
                <StackLayout
                    Spacing="15"
                    HorizontalOptions="StartAndExpand"
                    >
                    <Label
                        Text="REALIZAÇÃO"
                        FontSize="15"
                        HorizontalOptions="CenterAndExpand"
                        />
                    <Image
                        Source="fifa_logo.png"
                        WidthRequest="120"
                        Margin="20,20,20,20"/>

                </StackLayout>
                <StackLayout
                    Spacing="15"
                    HorizontalOptions="EndAndExpand">
                    <Label
                        Text="APOIO"
                        FontSize="15"
                        HorizontalOptions="CenterAndExpand"
                        />
                    <Image
                        Source="WSTowers.png"
                        WidthRequest="120"
                        Margin="20,20,20,20"/>


                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>